<!doctype html>
<html lang="en">
@await Component.InvokeAsync("_HeadLayoutComponentPartial")
<body>

    @await Component.InvokeAsync("_NavbarLayoutComponentPartial")

    @await Component.InvokeAsync("_ArticleDetailMainCoverImageComponentPartial")

    <section class="section">
        <div class="container">

            <div class="row blog-entries element-animate">

                <div class="col-md-12 col-lg-8 main-content">

                    @await Component.InvokeAsync("_ArticleDetailContentComponentPartial")


                    <div class="pt-5">
                        <p>Categories:  <a href="#">Food</a>, <a href="#">Travel</a>  Tags: <a href="#">#manila</a>, <a href="#">#asia</a></p>
                    </div>


                    @await Component.InvokeAsync("_ArticleDetailCommentListComponentPartial")

                </div>

                <!-- END main-content -->

                <div class="col-md-12 col-lg-4 sidebar">
                    <div class="sidebar-box search-form-wrap">
                        <form action="#" class="sidebar-search-form">
                            <span class="bi-search"></span>
                            <input type="text" class="form-control" id="s" placeholder="Type a keyword and hit enter">
                        </form>
                    </div>
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_ArticleDetailAboutAuthorComponentPartial")
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_ArticleDetailPopularPostComponentPartial")
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_ArticleDetailCategoryComponentPartial")
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_ArticleDetailTagComponentPartial")
                </div>
                <!-- END sidebar -->

            </div>
        </div>
    </section>


    <!-- Start posts-entry -->

    <!-- End posts-entry -->
    @await Component.InvokeAsync("_FooterLayoutComponentPartial")


    @await Component.InvokeAsync("_ScriptsLayoutComponentPartial")


</body>
</html>
