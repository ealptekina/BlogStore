@using Microsoft.AspNetCore.Identity
@inject UserManager<BlogStore.EntityLayer.Entities.AppUser> UserManager
@inject SignInManager<BlogStore.EntityLayer.Entities.AppUser> SignInManager

@{
    var user = await UserManager.GetUserAsync(User);
    var userFullName = user != null ? $"{user.Name} {user.Surname}" : "Kullanıcı";
}
<header class="app-header">
    <nav class="navbar navbar-expand-lg navbar-light">
        <ul class="navbar-nav">
            <!-- Sidebar toggle -->
            <li class="nav-item d-block d-xl-none">
                <a class="nav-link sidebartoggler" id="headerCollapse" href="javascript:void(0)">
                    <i class="ti ti-menu-2"></i>
                </a>
            </li>

            <!-- Notifications -->
            <li class="nav-item dropdown">
                <a class="nav-link" href="javascript:void(0)" id="drop1" data-bs-toggle="dropdown" aria-expanded="false">
                    <iconify-icon icon="solar:bell-linear" class="fs-6"></iconify-icon>
                    <div class="notification bg-primary rounded-circle"></div>
                </a>
                <div class="dropdown-menu dropdown-menu-animate-up" aria-labelledby="drop1">
                    <div class="message-body">
                        <a href="javascript:void(0)" class="dropdown-item">Bildirim 1</a>
                        <a href="javascript:void(0)" class="dropdown-item">Bildirim 2</a>
                    </div>
                </div>
            </li>
        </ul>

        <!-- User profile -->
        <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
            <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                <li class="nav-item dropdown">
                    <a class="nav-link" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="/flexy-bootstrap-lite-1.0.0/assets/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                        <span class="ms-2 fw-semibold">@userFullName</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                        <div class="message-body">
                            <a href="/Profile/ProfileDetail" class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-user fs-6"></i>
                                <p class="mb-0 fs-3">Profilim</p>
                            </a>
                            <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-mail fs-6"></i>
                                <p class="mb-0 fs-3">Mesajlarım</p>
                            </a>
                            <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                <i class="ti ti-list-check fs-6"></i>
                                <p class="mb-0 fs-3">Görevlerim</p>
                            </a>
                            <form method="post" asp-area="" asp-controller="Login" asp-action="Logout">
                                <button type="submit" class="btn btn-outline-primary mx-3 mt-2 d-block">Çıkış Yap</button>
                            </form>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>
