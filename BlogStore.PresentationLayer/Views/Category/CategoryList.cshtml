@model List<BlogStore.EntityLayer.Entities.Category>
@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/AdminLayout/_AuthorLayout.cshtml";
}

<!-- DataTables CSS -->
<link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Kategori Listesi</h5>
        <p class="card-subtitle mb-4">Kategoriler ile ilgili işlemleri buradan yapabilirsiniz.</p>

        <div class="mb-3 text-end">
            <a href="@Url.Action("CreateCategory", "Category")" class="btn btn-success">
                + Kategori Ekle
            </a>
        </div>

        <div class="table-responsive">
            <table id="categoryTable" class="table mb-0 text-nowrap align-middle fs-3">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.CategoryName</td>

                                <td>
                                    <a href="@Url.Action("UpdateCategory", "Category", new { id = item.CategoryId })" class="btn btn-primary btn-sm">Güncelle</a>
                                    <a href="@Url.Action("DeleteCategory", "Category", new { id = item.CategoryId })" class="btn btn-danger btn-sm">Sil</a>

                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- jQuery - Mutlaka DataTables'tan önce yüklensin -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<!-- Bootstrap 5 ile uyumlu DataTables JS -->
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#categoryTable').DataTable({
            pageLength: 5,
            lengthChange: false,
            pagingType: 'simple',
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json'
            }
        });
    });
</script>
