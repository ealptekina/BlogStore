@model List<BlogStore.EntityLayer.Entities.Article>

<div class="section search-result-wrap">
    <div class="container">

        <div class="row posts-entry">
            <div class="col-lg-12">


                @foreach (var item in Model)
                {
                    <div class="blog-entry d-flex blog-entry-search-item">
                        <a href="single.html" class="img-link me-4">
                            <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid" />
                        </a>

                        <div>
                            <span class="date">@item.CreatedDate.ToString("dd-MMM-yyyy") &bullet; <a href="#">Kategori Adı</a></span>
                            <h2><a href="single.html">@item.Title</a></h2>
                            <p>@item.Description.Substring(0, 100)</p>
                            <p><a href="single.html" class="btn btn-sm btn-outline-primary">Devamını Oku</a></p>
                        </div>
                    </div>
                }



                <div class="row text-start pt-5 border-top">
                    <div class="col-md-12">
                        <div class="custom-pagination">
                            <span>1</span>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <a href="#">4</a>
                            <span>...</span>
                            <a href="#">15</a>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>