@model BlogStore.EntityLayer.Entities.Category
@{
    ViewData["Title"] = "Kategori Ekle";
    Layout = "~/Views/AdminLayout/_AuthorLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Kategori Ekle</h5>  <!-- Başlık buraya alındı -->
        <p class="card-subtitle mb-4">Kategori ekleme işlemlerini yapabilirsiniz.</p>
        <form asp-action="CreateCategory" asp-controller="Category" method="post">
            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="@Url.Action("CategoryList", "Category")" class="btn btn-secondary ms-2">Geri Dön</a>
        </form>
    </div>
</div>
