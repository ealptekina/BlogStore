@using Microsoft.AspNetCore.Identity
@inject SignInManager<BlogStore.EntityLayer.Entities.AppUser> SignInManager

<div class="site-mobile-menu site-navbar-target">
    <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close">
            <span class="icofont-close js-menu-toggle"></span>
        </div>
    </div>
    <div class="site-mobile-menu-body"></div>
</div>

<nav class="site-nav">
    <div class="container">
        <div class="menu-bg-wrap">
            <div class="site-navigation">
                <div class="row g-0 align-items-center">
                    <div class="col-2">
                        <a href="index.html" class="logo m-0 float-start">Blogy<span class="text-primary">.</span></a>
                    </div>
                    <div class="col-8 text-center">
                        <form action="#" class="search-form d-inline-block d-lg-none">
                            <input type="text" class="form-control" placeholder="Ara...">
                            <span class="bi-search"></span>
                        </form>


                        <ul class="js-clone-nav d-none d-lg-inline-block text-start site-menu mx-auto">
                            <li><a href="/Default/Index">Ana Sayfa</a></li>
                            <li><a href="/Category/Index">Bloglar</a></li>
                            <li><a href="@Url.Action("Index", "Author")">Yazarlar</a></li>
                            <li><a href="/Home/Contact">Bize Yazın</a></li>
                            @if (!SignInManager.IsSignedIn(User))
                            {
                                <li><a href="/Login/UserLogin">Giriş Yap</a></li>
                            }
                            else
                            {
                                <li>
                                    <form asp-controller="Login" asp-action="Logout" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" style="background:none; border:none; padding:0; color:#007bff; cursor:pointer;">
                                            Çıkış Yap
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>

                    </div>
                    <div class="col-2 text-end">
                        <a href="#" class="burger ms-auto float-end site-menu-toggle js-menu-toggle d-inline-block d-lg-none light">
                            <span></span>
                        </a>
                        <form action="#" class="search-form d-none d-lg-inline-block">
                            <input type="text" class="form-control" placeholder="Ara...">
                            <span class="bi-search"></span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>