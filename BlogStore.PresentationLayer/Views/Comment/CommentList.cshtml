@model List<BlogStore.EntityLayer.Entities.Comment>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yorum Listesi</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5">

        <h2>Yorum Listesi</h2>

        <!-- Ekle butonu -->
        <div class="mb-3 text-end">
            <a href="@Url.Action("CreateComment", "Comment")" class="btn btn-success">
                + Yorum Ekle
            </a>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kullanıcı Adı Soyadı</th>
                    <th>Yorum Detayı</th>
                    <th>Yorum Tarihi</th>
                    <th>Sil</th>
                    <th>Güncelle</th> <!-- Eklendi -->
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@item.UserNameSurname</td>
                            <td>@item.CommentDetail</td>
                            <td>@item.CommentDate.ToString("dd.MM.yyyy HH:mm")</td>

                            <td>
                                <a href="@Url.Action("UpdateComment", "Comment", new { id = item.CommentId })" class="btn btn-primary btn-sm">Güncelle</a>
                            </td>
                            <td>
                                <a href="@Url.Action("DeleteComment", "Comment", new { id = item.CommentId })" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
