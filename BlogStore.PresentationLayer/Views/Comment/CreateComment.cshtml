@model BlogStore.EntityLayer.Entities.Comment
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yorum Oluştur</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Yeni Yorum Ekle</h2>

        @using (Html.BeginForm("CreateComment", "Comment", FormMethod.Post))
        {
            <div class="mb-3">
                <label for="UserNameSurname" class="form-label">Ad Soyad</label>
                @Html.TextBoxFor(m => m.UserNameSurname, new { @class = "form-control", placeholder = "Ad Soyad giriniz" })
            </div>

            <div class="mb-3">
                <label for="CommentDetail" class="form-label">Yorum</label>
                @Html.TextAreaFor(m => m.CommentDetail, new { @class = "form-control", rows = 4, placeholder = "Yorumunuzu yazınız" })
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
