@model List<BlogStore.EntityLayer.Entities.Article>

@{
    ViewData["Title"] = "Makale Listesi";
    Layout = "~/Views/AdminLayout/_AuthorLayout.cshtml";
}
<link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Makale Listesi</h5>
        <p class="card-subtitle mb-4">Kendi yazdığınız makaleleri buradan listeleyebilir ve sitede görüntüleyebilirsiniz.</p>

        <div class="mb-3 text-end">
            <a href="@Url.Action("CreateArticle", "Article")" class="btn btn-success">
                + Makale Oluştur
            </a>
        </div>

        <div class="table-responsive">
            <table id="articleTable" class="table mb-0 text-nowrap align-middle fs-3">
                <thead class="table-light">
                    <tr>
                        <th>Makale Başlığı</th>
                        <th>Sitede Gör</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var article in Model)
                    {
                        <tr>
                            <td>@article.Title</td>
                            <td>
                                <a href="@Url.Action("ArticleDetail", "Article", new { id = article.ArticleId })" target="_blank" class="btn btn-primary btn-sm">
                                    Görüntüle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#articleTable').DataTable({
            pageLength: 5,
            lengthChange: false,
            pagingType: 'simple',
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json'
            }
        });
    });
</script>
